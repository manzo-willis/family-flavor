<ul class="post-list">
    {% for post in postslist | reverse %}
        <li class="post-list__item">
            <article>
                <img src="{{ post.data.image }}" alt="{{ post.data.title }}" />
                <h3 class="post-list__title">
                    <a href="{{ post.url }}">{{ post.data.title }}</a>
                </h3>
            </article>
        </li>
    {% endfor %}
</ul>