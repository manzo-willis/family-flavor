<!doctype html>
<html lang="{{ metadata.language }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <title>{{ title or metadata.title }}</title>
    <link rel="icon" type=“image/x-icon” href="/images/favicon.ico">

    <meta property="og:title" content="{{ title or metadata.title | escape }}">
    <meta property="og:site_name" content="{{ metadata.title }}"/>
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="{{ site.url + page.url }}"/>
    <meta name="twitter:card" content="summary_large_image">
    {% set desc = description or metadata.description %}
    {% if not desc %}
        {% set desc = content | striptags | truncate(140) %}
    {% endif %}
    {% if desc %}
        <meta name="description" content="{{ desc | escape }}">
        <meta property="og:description" content="{{ desc | escape }}">
        <meta name="description" content="{{ desc | escape }}"/>
    {% endif %}

    <link href="https://fonts.googleapis.com/css2?family=Grape+Nuts&family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

<a href="#skip" class="skip-link visually-hidden">Skip to main content</a>

<header>
    <div class="container">
        <h1>
            <a class="fancy-writing logo-container" href="/">
                <svg xmlns="http://www.w3.org/2000/svg" class="logo" viewBox="0 0 64 64">
                    <path fill="none" stroke="#cb1106" stroke-linejoin="round" stroke-width="2"
                          d="M61 27v2a2 2 0 0 1-2 2h-1a2 2 0 0 0-2 2v22a6 6 0 0 1-6 6H14a6 6 0 0 1-6-6V33a2 2 0 0 0-2-2H5a2 2 0 0 1-2-2v-2a2 2 0 0 1 2-2h54a2 2 0 0 1 2 2Z"/>
                    <path fill="none" stroke="#cb1106" stroke-linejoin="round" stroke-width="2"
                          d="M8 38c4.8 0 4.8 4 9.6 4s4.8-4 9.6-4 4.79 4 9.59 4 4.8-4 9.61-4 4.8 4 9.6 4"/>
                    <circle cx="27" cy="46" r="2" fill="none" stroke="#cb1106" stroke-linejoin="round"
                            stroke-width="2"/>
                    <circle cx="35" cy="52" r="1" fill="#cb1106"/>
                    <circle cx="44" cy="48" r="3" fill="none" stroke="#cb1106" stroke-miterlimit="10" stroke-width="2"/>
                    <path fill="none" stroke="#cb1106" stroke-linejoin="round" stroke-width="2"
                          d="M58.91 17.88c-.33-3.84-11.32-6-24.55-4.89S10.67 18.17 11 22l.08 1L59 18.87Z"/>
                    <path fill="none" stroke="#cb1106" stroke-linejoin="round" stroke-width="2"
                          d="M30.36 13.33a4 4 0 0 1 8-.68"/>
                    <path fill="none" stroke="#cb1106" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M14 12a2 2 0 0 0 0-4 2 2 0 0 1-2-2 3 3 0 0 0-6 0 3 3 0 0 0 0 6 1 1 0 0 1 1 1l1 6"/>
                    <circle cx="58" cy="9" r="2" fill="none" stroke="#cb1106" stroke-linecap="round"
                            stroke-linejoin="round" stroke-width="2"/>
                    <circle cx="53" cy="4" r="1" fill="none" stroke="#cb1106" stroke-linecap="round"
                            stroke-linejoin="round" stroke-width="2"/>
                </svg>
                <span>
                    <span style="color: #CB1106">Sapori di</span>
                    <span style="color: #F64D08">famiglia</span>
                </span>
            </a>
        </h1>
    </div>
</header>

<main id="skip">
    <div class="container">
        {{ content | safe }}
    </div>
</main>

<footer role="contentinfo">
    <div class="container">
        <p>Copyright {{ helpers.currentYear() }} {{ metadata.title }}</p>
    </div>
</footer>
</body>
</html>