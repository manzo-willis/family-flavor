<!doctype html>
<html lang="{{ metadata.language }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Grape+Nuts&family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<a href="#skip" class="visually-hidden">Skip to main content</a>

<header>
    <div class="container">
        <a class="fancy-writing" href="/" class="home-link">Family Flavour</a>
    </div>
</header>

<main id="skip">
    <div class="container">
        {{ content | safe }}
    </div>
</main>

<footer>
    <div class="container">Footer</div>
</footer>
</body>
</html>