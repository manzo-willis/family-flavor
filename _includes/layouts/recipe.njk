---
layout: layouts/base.njk
---

<article class="post">
    <header class="post__header">
        <h1>{{ title }}</h1>
    </header>

    <main class="post__content">
        <img src="{{ image }}" alt="{{ title }}"/>
        <dl>
            {% if serve %}<dt>Porzioni</dt><dd>{{ serve }}</dd>{% endif %}
            {% if prepare %}<dt>Preparazione</dt><dd>{{ prepare }}</dd>{% endif %}
            {% if cook %}<dt>Cottura</dt><dd>{{ cook }}</dd>{% endif %}
            {% if total %}<dt>Tempo totale</dt><dd>{{ total }}</dd>{% endif %}
        </dl>
        <div>
            {{ content | safe }}
        </div>
    </main>
</article>